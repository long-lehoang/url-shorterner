FROM golang:1.25-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o analytics ./cmd/analytics

FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata
ENV TZ=UTC

WORKDIR /root/

COPY --from=builder /app/analytics .

CMD ["./analytics"]

